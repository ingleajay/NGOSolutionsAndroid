<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profileTv"
            android:src="@drawable/icon_face"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
        >
        <TextView
            android:id="@+id/nameTv"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="His Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/profileTv"
            android:layout_toRightOf="@+id/profileTv"
            />
        <TextView
            android:id="@+id/lastMessageTv"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Last Message"
            android:maxLines="2"
           android:layout_below="@+id/nameTv"
            android:layout_toEndOf="@+id/profileTv"
            android:layout_toRightOf="@+id/profileTv"
            />
    </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blockTv"
            android:src="@drawable/icon_check"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:id="@+id/onlineStatusTv"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>