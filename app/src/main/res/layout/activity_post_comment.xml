<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPost.PostComment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/head"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/pass_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginLeft="60dp"
            android:text="Post Details"
            android:textSize="21dp"
            android:textColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:id="@+id/set_text"/>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/commentsLayout"
        android:layout_below="@+id/head"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_face"
                            android:id="@+id/uPictureTv"
                            android:scaleType="centerCrop"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:layout_marginLeft="3dp"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:id="@+id/uNameTv"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33 min"
                                android:layout_marginLeft="3dp"
                                android:textColor="@color/black"
                                android:id="@+id/pTimeTv"/>
                        </LinearLayout>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/moreBtn"
                            android:background="@null"
                            android:src="@drawable/more_horz"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:text="Title"
                        android:id="@+id/pTitleTv"
                        android:autoLink="all"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:text="The description of the post"
                        android:id="@+id/pDescriptionTv"
                        android:autoLink="all"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/colorAccent"
                        android:id="@+id/pImageTv"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pLikesTv"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="3dp"
                            android:text="1.2k Likes"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pCommentsTv"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="3dp"
                            android:text="1.2k Comme"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F0F0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"

                        >
                        <Button
                            android:id="@+id/likebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13dp"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            app:icon="@drawable/icon_likes"
                            android:drawableStart="@drawable/icon_likes"
                            app:iconGravity="start"
                            android:text="LIKE"
                            android:layout_marginRight="2dp"
                            android:background="@null"
                            />

                        <Button
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            style="@style/Widget.MaterialComponents.Button.Icon"
                            app:icon="@drawable/icon_share"
                            app:iconGravity="start"
                            android:textSize="13dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="SHARE"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="Comments"
                android:drawableLeft="@drawable/icon_comment"
                android:textColor="@color/black"
                android:padding="2dp"
             android:drawableStart="@drawable/icon_comment"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/commentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cAvatarTv"
            android:src="@drawable/icon_face"/>
        <EditText
            android:id="@+id/commentEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cAvatarTv"
            android:hint="Enter Your Comment...."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/sendBtn"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/sendBtn"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:background="@color/colorAccent"
            android:src="@drawable/icon_send" />
    </RelativeLayout>
</RelativeLayout>